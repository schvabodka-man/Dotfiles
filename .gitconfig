[user]
email = scvhapps@gmail.com
name = schvabodka-man
[credential]
helper = /home/user/bin/pass-git-helper/pass-git-helper
[core]
autocrlf = input
[alias]
c = "!fish -c \"git commit -a -m \"$@\"\" -"
a = add
d = diff
b = checkout -b
m = merge
p = push -u origin
pm = push -u origin master
#tags
t = "!sh -c \"git tag -a $@ -m \"Version $@\" \" -"
#stash
s = stash save
save = s
saved = stash list
stashed = saved
load = stash apply
l = load
#list all files in current branch
ls = "!fish -c \"git ls-tree -r (git rev-parse --abbrev-ref HEAD)\" -"
lsa = ls #just in case
list = ls
#squash latest commits in one
squash = "!sh -c \"git reset --hard HEAD~$@ & git commit -m 'Squashed last $@ commits'\" -"
#view history of current branch
history = "!fish -c \"git log (git rev-parse --abbrev-ref HEAD) --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --max-count=50 --full-history --since=2.weeks \" -"
#moving one commit at time
undo = reset HEAD~
redo = reset HEAD@{1}
prev = undo
previous = undo
next = redo
back = undo
#same ones
goto = reset --hard
jump = goto
