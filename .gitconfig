[user]
email = scvhapps@gmail.com
name = schvabodka-man
[credential]
helper = /home/user/bin/pass-git-helper/pass-git-helper
[core]
autocrlf = input
[alias]
c = "!fish -c \"git commit -a -m \"$@\"\" -"
a = add
d = diff
b = checkout -b
m = merge
p = push -u origin
pm = push -u origin master
#tags
t = "!sh -c \"git tag -a $@ -m \"Version $@\" \" -"
#stash
s = stash save
save = s
saved = stash list
stashed = saved
load = stash apply
l = load
#interactive search via fzf and non interactive via fd
search = "!fish -c \"git ls-tree -r (git rev-parse --abbrev-ref HEAD) --name-only | fzf\" -"
fzf = search
find = "!fish -c \"~/.cargo/bin/fd \"$@\" -H -p (git rev-parse --show-toplevel)\" -"
#list all files in current branch
ls = "!fish -c \"git ls-tree -r (git rev-parse --abbrev-ref HEAD)\" -"
lsa = ls #just in case
list = ls
#squash latest commits in one
squash = "!sh -c \"git rebase -i HEAD~$@\" -"
#view history of current branch
history = "!fish -c \"git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --max-count=50 --full-history --since=2.weeks (git rev-parse --abbrev-ref HEAD) -- \" -"
history-file = "!fish -c \"git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --max-count=50 --full-history --since=2.weeks (git rev-parse --abbrev-ref HEAD) -- $@ \" -"
file-history = history-file
file-log = history-file
log-file = history-file
#moving one head at time
undo = reset --hard HEAD~1
redo = reset --hard HEAD@{1}
prev = undo
previous = undo
next = redo
back = undo
#same ones
goto = reset --hard
jump = goto
g = goto