set format_statusline= %{position} - %{duration} %{bitrate} kpbs %{codec}
set format_current= %a - %l -%3n. %t%= Disc: %D  %g %y
set show_current_bitrate= 1
set softvol= 1

bind common 2 view sorted
bind common 3 view queue
bind common 4 view playlist
bind common 5 view filters
bind common 6 view browser
bind common q win-add-q
bind common p win-add-p
bind browser backspace browser-up
bind browser . toggle show_hidden
bind browser enter win-activate
bind browser r win-update
bind common right seek +5
bind common left seek -5
bind common tab win-next
bind common mouse_scroll_up win-up
bind common mouse_scroll_down win-down
bind common up win-up
bind common down win-down
bind common enter win-activate
bind common c player-pause
bind common r toggle repeat

colorscheme blackwhite

fset flac=filename="*.flac"
fset Black_Metal=genre="Black Metal"
factivate
