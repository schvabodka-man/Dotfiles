color attachment brightmagenta default
color error      brightred    default
color hdrdefault red          default
color indicator  brightyellow red
color markers    brightcyan   default
color message    brightcyan   default
color normal     default      default
color quoted     brightblue   default
color search     black        white
color signature  red          default
color status     default      default
color tilde      magenta      default
color tree       magenta      default

set editor = "emacsclient -c"

set read_inc = 100
set mail_check = 90
set timeout = 15

set sort = reverse-date-received
set sort=threads
set sort_browser=reverse-date
set sort_aux=last-date-received

bind index q noop
bind pager i noop

bind index / search
bind index ? search-reverse
bind index n search-next
bind index p search-opposite

bind index l collapse-thread
bind index z collapse-all

bind index r reply
bind index R group-reply
bind index L list-reply

bind index <C-A-Q> quit

bind pager / search
bind pager ? search-reverse
bind pager n search-next
bind pager p search-opposite

bind pager r reply
bind pager R group-reply
bind pager l list-reply
bind pager L list-reply

bind pager q exit

auto_view text/html

set from = "scvhapps@gmail.com
set smtp_url = "smtp://scvhapps@smtp.gmail.com:587/"
set imap_user = "scvhapps@gmail.com"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Google Mail]/Drafts"
set trash = "+[Google Mail]/Archive"
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates
set move = no
set imap_keepalive = 900
